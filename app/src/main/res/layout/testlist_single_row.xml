<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/testname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/testrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spquantity"
        android:entries="@array/quantity"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_alignBaseline="@+id/spmaterialselection"
        android:layout_alignBottom="@+id/spmaterialselection"
        android:layout_toRightOf="@+id/spmaterialselection"
        android:layout_toEndOf="@+id/spmaterialselection">

    </Spinner>
</LinearLayout>